<web-app>
	<display-name>Restful Web Application</display-name>

	<servlet>
		<servlet-name>daquery-ws</servlet-name>
		<servlet-class>
                     org.glassfish.jersey.servlet.ServletContainer
                </servlet-class>
       <init-param>
             <param-name>javax.ws.rs.Application</param-name>
            <param-value>edu.pitt.dbmi.daquery.app.DaqueryApplication</param-value>
<!-- 
             <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>edu.pitt.dbmi.daquery.rest</param-value>
-->
        </init-param>
        <!-- I need these two settings to deserialize JSON objects -->
	    <init-param>
	        <param-name>jersey.config.server.provider.packages</param-name>
	        <param-value>com.fasterxml.jackson.jaxrs</param-value>
	    </init-param>
	    <init-param>
	        <param-name>jersey.config.server.provider.classnames</param-name>
	        <param-value>org.glassfish.jersey.media.multipart.MultiPartFeature</param-value>
	    </init-param>


		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>daquery-ws</servlet-name>
		<url-pattern>/ws/*</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>