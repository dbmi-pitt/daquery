<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="edu.pitt.dbmi.daquery.domain.User" table="SITE_USER" catalog="daquery">
        <id name="Id" type="string">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <property name="lastName" type="string">
            <column name="LASTNAME" length="10" not-null="true" unique="true" />
        </property>
        <property name="firstName" type="string">
            <column name="FIRSTNAME" length="20" not-null="true" unique="true" />
        </property>
        <property name="login" type="string">
            <column name="LOGIN" length="20" not-null="true" unique="true" />
        </property>
        <property name="password" type="string">
            <column name="PASSWORD" length="500" not-null="true" unique="true" />
        </property>
    </class>
</hibernate-mapping>